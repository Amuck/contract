<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_30"
        android:layout_marginTop="@dimen/default_30"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/SP_32" />

    <TextView
        android:id="@+id/reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lii_reward_top"
        android:layout_marginStart="@dimen/default_15"
        android:layout_toRightOf="@+id/tv_title"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/PX_20" />

    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="@dimen/lgd_height"
        android:layout_height="@dimen/lgd_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/default_30"
        android:scaleType="center"
        android:src="@drawable/icon_huru" />

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="@dimen/default_30"
        android:layout_height="@dimen/default_30"
        android:layout_marginTop="@dimen/default_30"
        android:scaleType="center" />


    <TextView
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_title"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/default_5"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/SP_22" />

    <View
        android:id="@+id/d1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DP_1"
        android:layout_below="@+id/submit"
        android:layout_marginEnd="@dimen/default_30"
        android:layout_marginStart="@dimen/default_30"
        android:layout_marginTop="@dimen/default_30"
        android:background="@color/divider_color" />

</RelativeLayout>